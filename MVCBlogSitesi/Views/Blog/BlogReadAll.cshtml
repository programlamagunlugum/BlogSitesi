@model IEnumerable<EntityLayer.Concrete.Blog>
    @foreach(var item in Model)
    {


<div class="post-content-body">
    @foreach (var paragraph in System.Text.RegularExpressions.Regex.Split(item.BlogContent, "\r\n\r\n|\n\n"))
    {
        <p>@paragraph</p>
    }
    @*<p>@item.BlogContent</p>*@
    <div class="row mb-5 mt-5">
        <div class="col-md-12 mb-4">
            <img src="@item.BlogImage" alt="Image placeholder" class="img-fluid rounded">
        </div>
    </div>
</div>
    }