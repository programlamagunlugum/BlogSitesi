@model EntityLayer.Concrete.Author

@{
    ViewBag.Title = "AddAuthor";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AddAuthor</h2>

<form class="form-group" method="post">
    @Html.Label("Yazar Adı Soyadı")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AuthorName)
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })

    <br />

    @Html.Label("Yazarın Yetenekleri")
    @Html.TextBoxFor(x => x.AuthorShort, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AuthorShort)
    <br />
    @Html.Label("Yazarın Ünvanı")
    @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AuthorTitle)
    <br />

    @Html.Label("Mail Adresi")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Password)
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    @Html.Label("Hakkında")
    @Html.TextAreaFor(x => x.AuthorAbout, 3, 20, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>



