@model EntityLayer.Concrete.Author

@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AuthorEdit</h2>
<form class="form-group" method="post">
   
    @Html.HiddenFor(x => x.AuthorID)
    <br />
    @Html.Label("Yazar Adı Soyadı")
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control" })
    <br />
    @Html.Label("Resim Yolu")
    @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
    <br />

    @Html.Label("Yazarın Yetenekleri")
    @Html.TextBoxFor(x => x.AuthorShort, new { @class = "form-control" })
    <br />
    @Html.Label("Yazarın Ünvanı")
    @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
    <br />

    @Html.Label("Mail Adresi")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
    <br />
    @Html.Label("Hakkında")
    @Html.TextAreaFor(x => x.AuthorAbout, 3, 20, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
